{%- set active -%}
  {%- for i in range(0, 2) -%}
    <b class="h-px bg-gradient-to-r from-transparent via-pri-500 to-transparent absolute inset-x-0 {% if i == 0 %}top{% else %}bottom{% endif %}-0 opacity-75"></b>
  {%- endfor -%}
{%- endset -%}

<nav class="flex items-center justify-between" aria-label="Main navigation">
  {%- if page.url !== '/resume/' %}  
    <a href="/" class="group flex-none" aria-hidden="true">
      <div class="btn-gray p-2 w-12 h-12 text-2xl lg:(w-14 h-14)">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200" role="img" class="w-full h-full fill-current">
          <title>Craig Erskine logo</title>
          <g fill-rule="evenodd">
            <path d="M42.747122,81.9990174 C58.9655226,93.344021 78.7054673,100 100,100 C121.294533,100 141.034477,93.344021 157.252882,81.9990144 C155.193825,75.4436177 152.039977,69.3730608 148.005622,64.0016292 C134.634094,74.0472141 118.012221,80 100,80 C81.9877797,80 65.3659077,74.0472146 51.9943761,64.0016357 C47.9600255,69.3730625 44.8061777,75.4436199 42.747122,81.9990174 Z" opacity=".25"></path><path d="M100,200 C44.7715223,200 0,155.228478 0,100 C0,44.7715223 44.7715223,0 100,0 C137.038592,0 169.374042,20.1365308 186.656057,50.0592979 C182.902635,56.5581213 178.439143,62.5953278 173.371615,68.0648818 C161.041547,39.7757571 132.830213,20 100,20 C55.8172178,20 20,55.8172178 20,100 C20,144.182782 55.8172178,180 100,180 C132.767816,180 160.934295,160.299342 173.301142,132.096319 C178.366895,137.552678 182.830857,143.575528 186.587453,150.059298 C169.288565,179.916659 136.989642,200 100,200 Z" />
          </g>
        </svg>
      </div>
    </a>
  {%- endif %}
  <ul class="ml-auto px-5 bg-gray-50/50 text-sm font-semibold flex gap-1 ring-(1 gray-200) rounded-full shadow md:(text-base gap-3)">
    {%- for item in collections.all | eleventyNavigation %}
      <li class="flex">
        <a href="{{ item.url }}" class="py-2.5 px-1.5 flex relative{% if item.url == page.url or item.url in page.url %} text-pri-500{% endif %} motion-safe:(transition) hover:(text-pri-500) md:(px-2)"{% if item.url == page.url or item.url in page.url %} aria-current="page"{% endif %}>
          {{ item.key }}
          {%- if item.url == page.url or item.url in page.url %}
            {#- other pages #}
            {{ active | safe -}}
          {%- endif %}
        </a>
      </li>
    {%- endfor %}
    {%- if page.url == '/resume/' %}
      <li class="flex"><button type="button" @click.prevent.stop="window.print();" class="py-2.5 px-2 flex relative motion-safe:(transition) hover:(text-pri-300)"><iconify-icon icon="mdi:printer" width="1em" height="1em" inline="false" class="iconify m-auto text-lg md:(text-2xl)"></iconify-icon></button></li>
    {%- else %}      
      <li class="flex">
        <button class="color-mode py-2.5 px-2 flex motion-safe:(transition) hover:(text-pri-500)" aria-label="Toggle color mode">
          <span class="block dark:(hidden)"><iconify-icon icon="mdi:weather-sunny" width="1em" height="1em" inline="false" class="iconify m-auto text-lg md:text-xl"></iconify-icon> <span class="sr-only">Switch to dark mode</span></span>
          <span class="hidden dark:(block)"><iconify-icon icon="mdi:weather-night" width="1em" height="1em" inline="false" class="iconify m-auto text-lg md:text-xl"></iconify-icon> <span class="sr-only">Switch to light mode</span></span>
        </button>
      </li>
    {%- endif %}
  </ul>
</nav>