{% macro x(social='',css='') %}
<ul class="flex gap-2 lg:(gap-5)">
  {%- for soc in social %}
  <li><a href="{{ soc.url }}" class="w-12 h-12 bg-gray-50/50 text-2xl flex items-center justify-center ring-(1 gray-200) rounded-full shadow text-gray-500 hover:(bg-{{ soc.color }}-500 text-white ring-0 motion-safe:(animate-blob)) motion-safe:(transition) {{ css }}"><iconify-icon icon="{{ soc.ico }}" width="1em" height="1em" inline="false" class="iconify" title="{{ soc.title }}"></iconify-icon></a></li>
  {%- endfor %}
</ul>
{% endmacro %}