{% setblock 'js' %}
<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('home', () => ({
      workTypeActive: 0,
      workTypes: [
        'Illustrations',
        'Web Design',
      ],
      workModal: false,
      workData: {},
      slugify(text) {
        return text?.toString()
          .toLowerCase()
          .trim()
          .replace(/\s+/g, '-')
          .replace('.', '-')
          .replace('&', '-and-')
          .normalize('NFKD')
          .replace(/[^\w\-]+/g, '')
          .replace(/\-\-+/g, '-')
          .replace(/^-+/, '')
          .replace(/-+$/, '') || ''
      },
    }))
  })
</script>
{% endsetblock %}